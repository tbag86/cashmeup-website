---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import CTABanner from '../../components/CTABanner.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const breadcrumbs = [{ label: 'Blog' }];

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog & News — PCP Claims, Grants & UK Money News | Cash Me Up"
  description="The Cash Me Up blog. Latest news on PCP car finance claims, the regulator updates, UK grants, cashback schemes, and consumer money tips."
  keywords="PCP claims news, the regulator motor finance review, UK grants news, Cash Me Up blog"
>
  <Breadcrumbs items={breadcrumbs} />

  <section class="gradient-hero text-white py-16 hero-animate">
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-black mb-4 animate-fade-in">Blog & News</h1>
      <p class="text-slate-300 text-lg max-w-2xl mx-auto animate-fade-in-delay-1">The latest on PCP claims, the regulator updates, grants, and money-saving opportunities for UK consumers.</p>
    </div>
  </section>

  <section class="section-padding bg-white">
    <div class="container-wide">
      {posts.length === 0 ? (
        <p class="text-slate-500 text-center py-12">No posts yet — check back soon.</p>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post, i) => (
            <div class={`reveal reveal-delay-${Math.min(i + 1, 5)}`}><BlogPostCard
              title={post.data.title}
              description={post.data.description}
              slug={post.slug}
              pubDate={post.data.pubDate}
              category={post.data.category}
              readTime={post.data.readTime}
            />
            </div>
          ))}
        </div>
      )}
    </div>
  </section>

  <CTABanner
    title="Ready to Check If You're Owed Money?"
    subtitle="It takes 2 minutes and is completely free."
    ctaText="Start My Free PCP Check"
    ctaHref="https://www.mypcpclaimuk.com/"
  />
</BaseLayout>

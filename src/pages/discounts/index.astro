---
import BaseLayout from '../../layouts/BaseLayout.astro';
import FAQSection from '../../components/FAQSection.astro';
import SignupForm from '../../components/SignupForm.astro';

const discountCards = [
  { retailer: 'M&S', saving: '15% off', category: 'Clothing & Food', description: 'Member discount across M&S clothing, homeware and food ranges.', color: 'bg-slate-50' },
  { retailer: 'Booking.com', saving: '10% off', category: 'Travel', description: 'Exclusive member rate on hotels and accommodation worldwide.', color: 'bg-blue-50' },
  { retailer: 'RAC', saving: '20% off', category: 'Breakdown Cover', description: 'Discounted breakdown cover for Cash Me Up members.', color: 'bg-yellow-50' },
  { retailer: 'Gym Passes', saving: '25% off', category: 'Health & Fitness', description: 'Discounted gym memberships at hundreds of venues across the UK.', color: 'bg-green-50' },
  { retailer: 'NOW TV', saving: '30% off', category: 'Entertainment', description: 'Reduced price passes for NOW TV sport, entertainment, and cinema.', color: 'bg-purple-50' },
  { retailer: 'Currys', saving: '12% off', category: 'Technology', description: 'Member pricing on laptops, TVs, phones, and home appliances.', color: 'bg-red-50' },
];

const categories = [
  { label: 'UK Retailers', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg>` },
  { label: 'Travel', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" /></svg>` },
  { label: 'Insurance', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>` },
  { label: 'Subscriptions', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" /></svg>` },
  { label: 'Dining Out', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" /></svg>` },
  { label: 'Health & Fitness', icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>` },
];

const steps = [
  { number: '01', title: 'Join Cash Me Up Free', description: 'Create your free member account in under a minute. No payment details, no subscription.' },
  { number: '02', title: 'Browse Your Discounts', description: 'Log in to your member dashboard and browse all available discounts, filtered by category and saving size.' },
  { number: '03', title: 'Redeem & Save', description: 'Click through to the retailer with your member code or exclusive link. The discount applies automatically at checkout.' },
];

const discountsFAQs = [
  {
    question: 'How are the discounts different from what\'s already publicly available?',
    answer: 'Our discounts will be negotiated exclusively for Cash Me Up members — meaning you won\'t find them on voucher sites or Google. We\'re partnering directly with retailers to secure member-only rates that aren\'t available to the general public.',
  },
  {
    question: 'When does Discounts launch?',
    answer: 'We\'re actively in talks with retailers and building the platform. Join free to get a launch notification — early members will get access to the best introductory deals.',
  },
  {
    question: 'Will I need to pay for access to member discounts?',
    answer: 'No. Member discounts are included with your free Cash Me Up account. There is no premium tier, no upgrade cost, and no subscription. Free membership gives you access to everything.',
  },
  {
    question: 'How many retailers will be included at launch?',
    answer: 'We\'re targeting 100+ retailers at launch across clothing, travel, insurance, dining, health, and entertainment. We\'ll be adding new partners continuously after launch.',
  },
  {
    question: 'Can I stack discounts with cashback?',
    answer: 'Yes — where a retailer participates in both our discounts and cashback programmes, you\'ll be able to get the discount at checkout AND earn cashback on top. We\'ll make it clear which offers can be combined.',
  },
];
---

<BaseLayout
  title="Member Discounts. Real Savings. | Discounts | Cash Me Up"
  description="Exclusive member discounts across UK retailers, travel, insurance, subscriptions and more. Free with your Cash Me Up membership. Coming soon."
  keywords="member discounts UK, exclusive discounts, cashmeup discounts, retailer discounts UK, travel discounts, subscription discounts"
>
  <!-- Dark Hero -->
  <section class="gradient-hero dark-section hero-animate">
    <div class="container-wide py-20 md:py-28 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-[#4CAF50] rounded-full opacity-10 -translate-y-1/3 translate-x-1/3 pointer-events-none" aria-hidden="true"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-[#4CAF50] rounded-full opacity-[0.07] translate-y-1/3 -translate-x-1/3 pointer-events-none" aria-hidden="true"></div>

      <div class="relative z-10 max-w-3xl">
        <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/15 border border-white/25 mb-6">
          <svg class="w-4 h-4 text-[#7DD87D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span class="text-sm font-semibold text-white">Coming Soon</span>
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 animate-fade-in">
          Member Discounts. <span class="text-[#7DD87D]">Real Savings.</span>
        </h1>
        <p class="text-slate-300 text-lg md:text-xl leading-relaxed mb-8 max-w-2xl animate-fade-in-delay-1">
          Your Cash Me Up membership unlocks exclusive discounts across hundreds of UK retailers, travel brands, insurance providers, and subscriptions. Deals you won't find anywhere else — free with your account.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/join/" class="btn-primary text-lg px-8 py-4">
            Join Free — Get Early Access
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
          </a>
          <a href="/claims/" class="btn-white text-lg px-8 py-4">
            See What's Live Now
          </a>
        </div>

        <div class="grid grid-cols-3 gap-6 mt-12 pt-8 border-t border-white/10">
          {[
            { value: '100+', label: 'Retailers at launch' },
            { value: '£250+', label: 'Avg. annual saving' },
            { value: '0', label: 'Cost to access' },
          ].map((stat) => (
            <div class="text-center">
              <div class="text-3xl font-black text-[#7DD87D]">{stat.value}</div>
              <div class="text-sm mt-1 text-white/70">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon Banner -->
  <section class="bg-amber-50 border-y border-amber-200 py-5">
    <div class="container-wide">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl bg-amber-100 flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" /></svg>
          </div>
          <div>
            <p class="font-bold text-amber-900 text-sm">Member Discounts — Coming Soon</p>
            <p class="text-amber-700 text-xs">Join now and be first in line for exclusive launch deals when we go live.</p>
          </div>
        </div>
        <a href="/join/" class="flex-shrink-0 bg-amber-500 hover:bg-amber-600 text-white font-bold text-sm px-5 py-2.5 rounded-lg transition-colors">
          Register Interest
        </a>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="section-padding bg-white">
    <div class="container-wide">
      <div class="text-center max-w-2xl mx-auto mb-12 reveal">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">Discounts Across Every Category</h2>
        <p class="text-slate-600 text-lg">Wherever you spend, Cash Me Up will have a member deal for you.</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {categories.map((cat) => (
          <div class="flex flex-col items-center gap-3 p-5 rounded-2xl bg-[#F5F7FA] border border-slate-100 text-center">
            <div class="w-14 h-14 rounded-2xl bg-white flex items-center justify-center text-[#2D6B2D] shadow-sm">
              <Fragment set:html={cat.icon} />
            </div>
            <span class="font-semibold text-[#1B2A4A] text-sm">{cat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Example Discount Cards -->
  <section class="section-padding bg-[#F5F7FA]">
    <div class="container-wide">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">Example Member Discounts</h2>
        <p class="text-slate-600 text-lg">A taste of the exclusive deals coming with your Cash Me Up membership.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {discountCards.map((card) => (
          <div class={`rounded-2xl border border-slate-200 p-6 opacity-90 relative ${card.color}`}>
            <div class="absolute top-4 right-4">
              <span class="flex items-center gap-1.5 bg-white/80 text-slate-500 text-xs font-bold px-3 py-1 rounded-full">
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                Coming Soon
              </span>
            </div>
            <span class="text-xs font-semibold text-[#2D6B2D] bg-[#E8F5E8] px-2 py-0.5 rounded inline-block mb-3">{card.category}</span>
            <h3 class="text-xl font-black text-[#1B2A4A] mb-1 pr-20">{card.retailer}</h3>
            <p class="text-4xl font-black text-[#2D6B2D] mb-3">{card.saving}</p>
            <p class="text-slate-500 text-sm leading-relaxed">{card.description}</p>
            <div class="mt-4 pt-3 border-t border-white/60">
              <span class="inline-flex items-center gap-1 text-xs font-semibold text-[#1B2A4A]">
                <svg class="w-3.5 h-3.5 text-[#2D6B2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
                Members Only
              </span>
            </div>
          </div>
        ))}
      </div>
      <p class="text-center text-slate-400 text-sm mt-6">Example discounts shown for illustrative purposes. Partner retailers confirmed at launch.</p>
    </div>
  </section>

  <!-- How It'll Work -->
  <section class="section-padding bg-white">
    <div class="container-wide">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">How Member Discounts Work</h2>
        <p class="text-slate-600 text-lg">Three steps. Zero hassle. Real savings.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {steps.map((step, i) => (
          <div class="text-center relative">
            {i < steps.length - 1 && (
              <div class="hidden md:block absolute top-10 left-[calc(50%+3rem)] right-0 h-0.5 bg-[#E8F5E8] z-0" aria-hidden="true"></div>
            )}
            <div class="relative z-10 w-20 h-20 rounded-full bg-[#2D6B2D] flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-black text-white">{step.number}</span>
            </div>
            <h3 class="text-lg font-bold text-[#1B2A4A] mb-3">{step.title}</h3>
            <p class="text-slate-500 text-sm leading-relaxed">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQSection
    title="Discounts FAQ"
    subtitle="Your questions about Cash Me Up member discounts, answered."
    faqs={discountsFAQs}
  />

  <!-- Join CTA -->
  <section class="section-padding bg-[#1B2A4A] dark-section">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-6">
            Get Member Discounts <span class="text-[#7DD87D]">From Day One</span>
          </h2>
          <p class="text-slate-300 text-lg leading-relaxed mb-6">
            Join free today and you'll get access to every discount we launch — including exclusive early-member deals that won't be available to later joiners.
          </p>
          <div class="flex flex-col gap-3">
            {[
              'Exclusive deals not available elsewhere',
              'Early-member rates for founding members',
              'New retailers added every week after launch',
              'Stackable with cashback on qualifying purchases',
            ].map((item, i) => (
              <div class="flex items-center gap-3 text-slate-300 text-sm">
                <svg class="w-5 h-5 text-[#7DD87D] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" /></svg>
                {item}
              </div>
            ))}
          </div>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <h3 class="text-xl font-bold text-[#1B2A4A] mb-2">Join Free — Unlock Discounts</h3>
          <p class="text-slate-500 text-sm mb-6">No payment required. Access grows as we add partners.</p>
          <SignupForm />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

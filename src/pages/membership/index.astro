---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrustSignals from '../../components/TrustSignals.astro';
import FAQSection from '../../components/FAQSection.astro';
import SignupForm from '../../components/SignupForm.astro';

const benefits = [
  {
    icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    title: 'Claims Access',
    description: 'Instant access to PCP car finance claims, with automatic entry to every new claim type as it launches — energy, bank charges, holidays and more.',
    status: 'Live Now',
    statusStyle: 'bg-[#E8F5E8] text-[#1E5A1E]',
  },
  {
    icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>`,
    title: 'Grants Matching',
    description: 'Personalised matching to every UK government grant you qualify for — home improvements, energy, business, disability adaptations, and more.',
    status: 'Coming Soon',
    statusStyle: 'bg-slate-100 text-slate-600',
  },
  {
    icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg>`,
    title: 'Cashback',
    description: 'Earn real cashback on groceries, fuel, insurance, utilities, tech and hundreds of everyday purchases at UK retailers.',
    status: 'Coming Soon',
    statusStyle: 'bg-slate-100 text-slate-600',
  },
  {
    icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" /></svg>`,
    title: 'Member Discounts',
    description: 'Exclusive member-only discounts across UK retailers, travel, insurance, subscriptions, dining and health — unavailable anywhere else.',
    status: 'Coming Soon',
    statusStyle: 'bg-slate-100 text-slate-600',
  },
  {
    icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" /></svg>`,
    title: 'Smart Alerts',
    description: 'Personalised notifications when new compensation schemes, grants or money-saving opportunities that match your profile go live. Never miss out.',
    status: 'Active',
    statusStyle: 'bg-[#E8F5E8] text-[#1E5A1E]',
  },
];

const comparisonRows = [
  { feature: 'PCP Claims checking', member: true, nonMember: false },
  { feature: 'Future claims access (energy, bank, etc.)', member: true, nonMember: false },
  { feature: 'Personalised grant matching', member: true, nonMember: false },
  { feature: 'Cashback on purchases', member: true, nonMember: false },
  { feature: 'Exclusive member discounts', member: true, nonMember: false },
  { feature: 'Smart money alerts', member: true, nonMember: false },
  { feature: 'Early access to new products', member: true, nonMember: false },
  { feature: 'Monthly cost', member: '£0', nonMember: 'N/A' },
];

const membershipFAQs = [
  {
    question: 'What does free membership actually include?',
    answer: 'Free membership gives you access to everything Cash Me Up builds — claims access (PCP live now), grant matching, cashback, member discounts, and smart alerts. There is no paid tier, no premium upgrade, and no catch. Everything we build is included with your free account.',
  },
  {
    question: 'Will membership ever cost money?',
    answer: 'No. Cash Me Up\'s free membership is free forever. Our business model is built on referral commissions and partner fees — never on charging consumers. The free membership promise is permanent.',
  },
  {
    question: 'How do I join?',
    answer: 'Fill in the signup form on this page or click "Join Free" anywhere on the site. It takes under a minute — just your name, email, and optional phone number. No payment details required.',
  },
  {
    question: 'What happens after I join?',
    answer: 'You\'ll get an immediate welcome email with access to live products (PCP claims checking right now). As we launch each new product, we\'ll send you a personal notification. Your member dashboard will fill up with opportunities matched to your profile.',
  },
  {
    question: 'Can I delete my account?',
    answer: 'Yes, at any time. Email us at hello@cashmeup.co.uk and we\'ll delete your account and all associated data within 30 days, in line with our GDPR obligations. You can also unsubscribe from emails at any time using the link in any email we send.',
  },
  {
    question: 'Is my data safe?',
    answer: 'Absolutely. We\'re fully UK GDPR compliant. Your data is stored securely, never sold to third parties, and only shared with our regulated partners for the specific purpose you\'ve agreed to. See our <a href="/privacy-policy/" class="text-[#2D6B2D] hover:underline">Privacy Policy</a> for full details.',
  },
];
---

<BaseLayout
  title="Free Membership. Maximum Value. | Membership | Cash Me Up"
  description="Cash Me Up free membership unlocks claims access, grant matching, cashback, discounts and smart alerts — all for £0. Join free today."
  keywords="cash me up membership, free membership, claims membership, cashback membership, UK money platform membership"
>
  <!-- Dark Hero -->
  <section class="gradient-hero dark-section">
    <div class="container-wide py-20 md:py-28 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-[#4CAF50] rounded-full opacity-10 -translate-y-1/3 translate-x-1/3 pointer-events-none" aria-hidden="true"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-[#4CAF50] rounded-full opacity-[0.07] translate-y-1/3 -translate-x-1/3 pointer-events-none" aria-hidden="true"></div>

      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/15 border border-white/25 mb-6">
          <svg class="w-4 h-4 text-[#7DD87D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
          <span class="text-sm font-semibold text-white">Free. Always.</span>
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6">
          Free Membership. <span class="text-[#7DD87D]">Maximum Value.</span>
        </h1>
        <p class="text-slate-300 text-lg md:text-xl leading-relaxed mb-10 max-w-2xl mx-auto">
          One free account unlocks everything Cash Me Up builds — claims, grants, cashback, discounts, and smart alerts. No subscription, no credit card, no tiers. Just free.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/join/" class="btn-primary text-lg px-8 py-4">
            Join Free Now
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
          </a>
          <a href="#whats-included" class="btn-white text-lg px-8 py-4">
            See What's Included
          </a>
        </div>

        <!-- Price callout -->
        <div class="mt-12 inline-flex items-center gap-4 bg-white/10 border border-white/20 rounded-2xl px-8 py-5">
          <div class="text-center">
            <div class="text-5xl font-black text-[#7DD87D]">£0</div>
            <div class="text-white/70 text-sm mt-1">per month</div>
          </div>
          <div class="w-px h-12 bg-white/20"></div>
          <div class="text-left">
            <div class="text-white font-bold">Free forever</div>
            <div class="text-white/60 text-sm">No subscription, no credit card,<br />no upgrade required.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section-padding bg-white" id="whats-included">
    <div class="container-wide">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">What's Included With Free Membership</h2>
        <p class="text-slate-600 text-lg">Five money-back products. One free account. No catch.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <div class="card-hover group flex flex-col gap-4">
            <div class="flex items-start justify-between">
              <div class="w-14 h-14 rounded-xl bg-[#E8F5E8] flex items-center justify-center text-[#2D6B2D] group-hover:bg-[#2D6B2D] group-hover:text-white transition-colors">
                <Fragment set:html={benefit.icon} />
              </div>
              <span class={`text-xs font-bold px-3 py-1 rounded-full ${benefit.statusStyle}`}>{benefit.status}</span>
            </div>
            <div>
              <h3 class="text-lg font-bold text-[#1B2A4A] mb-2">{benefit.title}</h3>
              <p class="text-slate-500 text-sm leading-relaxed">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  <section class="section-padding bg-[#F5F7FA]">
    <div class="container-wide">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">Member vs Non-Member</h2>
        <p class="text-slate-600 text-lg">Here's exactly what you get — and what you miss out on without a free account.</p>
      </div>

      <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
        <!-- Table header -->
        <div class="grid grid-cols-3 bg-[#1B2A4A] text-white">
          <div class="p-4 font-semibold text-sm text-white/80">Feature</div>
          <div class="p-4 font-bold text-center text-[#7DD87D]">Free Member</div>
          <div class="p-4 font-semibold text-center text-white/60 text-sm">Non-Member</div>
        </div>

        {comparisonRows.map((row, i) => (
          <div class={`grid grid-cols-3 border-t border-slate-100 ${i % 2 === 0 ? 'bg-white' : 'bg-slate-50/50'}`}>
            <div class="p-4 text-sm text-slate-700 font-medium">{row.feature}</div>
            <div class="p-4 flex items-center justify-center">
              {typeof row.member === 'boolean' ? (
                row.member ? (
                  <svg class="w-6 h-6 text-[#2D6B2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" /></svg>
                ) : (
                  <svg class="w-6 h-6 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                )
              ) : (
                <span class="font-black text-[#2D6B2D] text-lg">{row.member}</span>
              )}
            </div>
            <div class="p-4 flex items-center justify-center">
              {typeof row.nonMember === 'boolean' ? (
                row.nonMember ? (
                  <svg class="w-6 h-6 text-[#2D6B2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" /></svg>
                ) : (
                  <svg class="w-6 h-6 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                )
              ) : (
                <span class="text-slate-400 text-sm">{row.nonMember}</span>
              )}
            </div>
          </div>
        ))}

        <div class="p-6 bg-[#E8F5E8] border-t border-[#2D6B2D]/20 text-center">
          <a href="/join/" class="btn-primary">
            Join Free — Get Everything
            <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Signals -->
  <TrustSignals title="Your Account is Safe With Us" variant="light" />

  <!-- Join Form Section -->
  <section class="section-padding bg-[#1B2A4A] dark-section" id="join">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-6">
            Join 1,000s of UK Consumers <span class="text-[#7DD87D]">Already on Board</span>
          </h2>
          <p class="text-slate-300 text-lg leading-relaxed mb-8">
            Create your free Cash Me Up account in under a minute. You'll get instant access to live products and be the first to know as we launch more.
          </p>
          <div class="space-y-4">
            {[
              { step: '1', text: 'Fill in your name and email (30 seconds)' },
              { step: '2', text: 'Confirm your free account via email' },
              { step: '3', text: 'Access claims, alerts and future products immediately' },
            ].map((item) => (
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-[#2D6B2D] flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-black text-sm">{item.step}</span>
                </div>
                <span class="text-slate-300 text-sm">{item.text}</span>
              </div>
            ))}
          </div>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 rounded-xl bg-[#E8F5E8] flex items-center justify-center">
              <svg class="w-5 h-5 text-[#2D6B2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-[#1B2A4A]">Free Membership</h3>
              <p class="text-[#2D6B2D] text-sm font-semibold">£0 / month — forever</p>
            </div>
          </div>
          <SignupForm />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQSection
    title="Membership FAQ"
    subtitle="Everything you need to know about your free Cash Me Up account."
    faqs={membershipFAQs}
  />

  <!-- Bottom CTA -->
  <section class="section-padding bg-white">
    <div class="container-wide text-center">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-black text-[#1B2A4A] mb-4">
          Your money is out there.<br /><span class="text-[#2D6B2D]">Let's find it together.</span>
        </h2>
        <p class="text-slate-600 text-lg mb-8">
          Join Cash Me Up free today. Check your PCP claim, register for grants, cashback and discounts — and never miss another money opportunity.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/join/" class="btn-primary text-lg px-8 py-4">
            Join Free Now
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
          </a>
          <a href="/claims/" class="btn-secondary text-lg px-8 py-4">
            Explore Our Products
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
